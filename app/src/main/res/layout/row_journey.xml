<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="0dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/journey_item_padding_horizontal"
        android:paddingRight="@dimen/journey_item_padding_horizontal"
        android:paddingTop="@dimen/journey_item_padding_vertical"
        android:paddingBottom="@dimen/journey_item_padding_vertical">
        <TextView android:id="@+id/row_journey_title_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/row_journey_subtitle_tv"
            android:textSize="@dimen/journey_item_name_text_size"
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/journey_item_text_color"
            android:layout_marginBottom="@dimen/journey_item_title_subtitle_chain_distance_half"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center"
            tools:text="Journey #1"/>
        <TextView android:id="@+id/row_journey_subtitle_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_journey_title_tv"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="@dimen/journey_item_title_subtitle_chain_distance_half"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintHeight_default="wrap"
            tools:text="Started on 31/04/2018"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/journey_item_text_color"
            android:textSize="@dimen/journey_item_subtitle_text_size"/>
        <TextView android:id="@+id/journey_item_hint_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Active"
            android:textColor="@color/journey_item_hint_color"/>
        <ImageView android:id="@+id/journey_item_hint_iv"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintTop_toTopOf="@id/journey_item_hint_tv"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/journey_item_hint_tv"
            app:srcCompat="@drawable/ic_record"
            android:tint="@color/journey_item_hint_color" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>