<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_journey_info_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="true"
    app:behavior_hideable="false"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:behavior_peekHeight="@dimen/journey_info_bottom_sheet_peek_height"
    app:cardBackgroundColor="@android:color/white">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_journey_info_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/journey_info_layout_padding_horizontal"
        android:paddingRight="@dimen/journey_info_layout_padding_horizontal"
        android:paddingBottom="@dimen/journey_info_layout_padding_vertical"
        android:paddingTop="@dimen/journey_info_layout_padding_vertical">
        <TextView android:id="@+id/view_journey_info_total_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:textSize="@dimen/journey_info_layout_title_text_size"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Total duration: 1 h 26 m"/>
        <TextView android:id="@+id/view_journey_info_started_at_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/view_journey_info_total_duration_tv"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            android:textSize="@dimen/journey_info_layout_desc_text_size"
            tools:text="Started: 05/08/2018, 13:33"
            app:layout_constraintBottom_toTopOf="@+id/view_journey_info_ended_at_tv"
            app:layout_constraintVertical_chainStyle="packed"
            android:ellipsize="end"/>
        <TextView android:id="@+id/view_journey_info_ended_at_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            tools:text="Completed: 05/08/2018, 15:00"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:textSize="@dimen/journey_info_layout_desc_text_size"
            app:layout_constraintBottom_toTopOf="@+id/view_journey_info_distance_tv"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/view_journey_info_started_at_tv" />
        <TextView android:id="@+id/view_journey_info_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_journey_info_ended_at_tv"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="3dp"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            tools:text="Total distance covered : 45 km"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>